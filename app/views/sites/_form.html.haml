= form_for @site do |f|
  - if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name, {class: 'text'}
  .field
    = f.label :url
    = f.text_area :url, {class: 'text'}
  .field
    = f.label :rss
    = f.text_area :rss, {class: 'text'}
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
